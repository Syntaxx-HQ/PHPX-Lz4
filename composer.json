{
    "name": "syntaxx/lz4",
    "description": "A pure PHP implementation of LZ4 compression and decompression",
    "keywords": [
        "lz4",
        "compression",
        "decompression"
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "slevomat/coding-standard": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Syntaxx\\LZ4\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Syntaxx\\LZ4\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit -c phpunit.coverage.xml",
        "cs": "phpcs",
        "cs:fix": "phpcbf"
    },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
